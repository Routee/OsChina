<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/iv_found_shake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/shaking"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/ll_found_shake"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_found_shake_head"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:singleLine="true"
                android:id="@+id/tv_found_shake_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <TextView
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_found_shake_dsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_found_shake_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7c7c7c"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@mipmap/found_clock"
                    android:id="@+id/tv_found_shake_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7c7c7c"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@mipmap/found_comment"
                    android:id="@+id/tv_found_shake_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7c7c7c"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>