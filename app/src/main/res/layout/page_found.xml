<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#8eee"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_found_ossoftware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#ffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:src="@mipmap/ic_discover_softwares"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="开源软件"
            android:textColor="#000"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:id="@+id/ll_found_offlineact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:src="@mipmap/ic_discover_offlineact"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="线下活动"
            android:textColor="#000"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_found_finduser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#ffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:src="@mipmap/ic_discover_find"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="搜索用户"
            android:textColor="#000"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:id="@+id/ll_found_nearfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:src="@mipmap/ic_discover_near"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="附近程序员"
            android:textColor="#000"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_found_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#ffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:src="@mipmap/ic_discover_scan"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="扫一扫"
            android:textColor="#000"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:id="@+id/ll_found_shake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:src="@mipmap/ic_discover_shake"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="摇一摇"
            android:textColor="#000"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>

</LinearLayout>