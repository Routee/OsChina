<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp">

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:id="@+id/tv_none"
        android:gravity="center"
        android:textSize="20sp"
        android:text="没有更多数据了"
        android:layout_height="wrap_content"/>

    <com.zssfw.oschina.ui.pager.found.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="50dp"
        app:border_width="2dp"
        app:border_color="#fff"
        android:src="@mipmap/ic_launcher"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Astaxie"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_span_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="在新闻#凤姐整形成孙悟空#发表评论"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_dsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="就his懂啊好的死哦啊好的送啊都会死奥基迪送啊dhsia"
            android:maxLines="5"
            android:textColor="#c000"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2001-01-01"/>

            <TextView
                android:id="@+id/tv_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/found_comment"
                android:text="0"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>